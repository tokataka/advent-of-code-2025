{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'run' for current file",
      "cargo": {
        "args": ["build", "--bin=run"],
        "filter": {
          "name": "run",
          "kind": "bin"
        }
      },
      "args": ["${fileBasenameNoExtension}"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug 'test' for current file",
      "cargo": {
        "args": ["test", "--lib"]
      },
      "args": ["${fileBasenameNoExtension}"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
